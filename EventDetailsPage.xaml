<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApp.EventDetailsPage">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Event Details" FontSize="24" HorizontalOptions="Center" />

            <Label Text="Name:" FontSize="18" />
            <Label Text="{Binding SelectedEvent.Name}" FontSize="18" />

            <Label Text="Location:" FontSize="18" />
            <Label Text="{Binding SelectedEvent.Location}" FontSize="18" />

            <Label Text="Date:" FontSize="18" />
            <Label Text="{Binding SelectedEvent.Date}" FontSize="18" />

            <Button Text="Back" Command="{Binding GoBackCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
