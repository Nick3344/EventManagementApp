<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EventManagementApp.EditEventPage"
             Title="Edit Event">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Edit Event" FontSize="24" HorizontalOptions="Center" />

            <Entry Text="{Binding SelectedEvent.Name}" Placeholder="Event Name" />
            <Entry Text="{Binding SelectedEvent.Location}" Placeholder="Event Location" />
            <DatePicker Date="{Binding SelectedEvent.Date}" />

            <Button Text="Save" Command="{Binding SaveEventCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
